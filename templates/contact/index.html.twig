{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<div class = "container">
        <h1>Contact index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.lastname }}</td>
                    <td>
                        <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                        {{ include('contact/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_contact_new') }}">Create new</a>
        <br>
        <a href="{{ path('app_agenda_index') }}">Agenda</a>
</div>
{% endblock %}
