{% extends 'base.html.twig' %}

{% block title %}Agenda index{% endblock %}

{% block body %}
    <div class = "container">
        <h1>Agenda index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Label </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for agenda in agendas %}
                <tr>
                    <td><a href="{{ path('app_agenda_show', {'id': agenda.id}) }}"> {{ agenda.label }}</td>
                    <td>
                        <a class="btn-a" href="{{ path('app_agenda_edit', {'id': agenda.id}) }}">Edit</a>
                        {{ include('agenda/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn-a" href="{{ path('app_agenda_new') }}">Create new</a>
    </div>
{% endblock %}
