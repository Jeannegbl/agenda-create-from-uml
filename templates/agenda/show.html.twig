{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
<div class = "container">
    <h1>Agenda</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Label</th>
                <td>{{ agenda.label }}</td>

          

                <td>{{ agenda.contact[1].lastname }}</td>

            </tr>
        </tbody>
    </table>
    <table class="table">
       {% for contact in agenda.contact %}
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastname }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

    <a href="{{ path('app_agenda_edit', {'id': agenda.id}) }}">Edit</a>
    <a href="{{ path('app_contact_new') }}">Create new contact</a>
    <a href="{{ path('app_agenda_index') }}">back to list</a>
    {{ include('agenda/_delete_form.html.twig') }}
</div>
{% endblock %}
